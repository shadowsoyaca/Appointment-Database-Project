<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.appointmentProject.desktop.controller.AccountManagementController"
      alignment="CENTER"
      spacing="30"
      style="-fx-padding: 40;">

    <Label text="Account Management"
           style="-fx-font-size: 32px; -fx-font-weight: bold;" />

    <Button text="Edit Email"
            style="-fx-font-size:18px; -fx-padding: 10 20;"
            onAction="#handleEditEmail" />

    <Button text="Change Password"
            style="-fx-font-size:18px; -fx-padding:10 20;"
            onAction="#handleChangePassword" />

    <Button text="Back"
            style="-fx-font-size:16px; -fx-padding: 8 16;"
            onAction="#handleBack" />

</VBox>
