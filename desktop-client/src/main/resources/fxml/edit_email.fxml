<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.appointmentProject.desktop.controller.EditAccountEmailController"
      alignment="CENTER"
      spacing="20"
      style="-fx-padding: 40;">

    <Label text="Change Email"
           style="-fx-font-size: 28px; -fx-font-weight: bold;" />

    <TextField fx:id="emailField"
               promptText="Enter new email"
               style="-fx-font-size: 18px; -fx-padding: 6;" />

    <Button text="Update Email"
            style="-fx-font-size: 16px; -fx-padding: 8 16;"
            onAction="#handleSaveEmail" />

    <Button text="Back"
            style="-fx-font-size: 14px;"
            onAction="#handleBack" />

    <Label fx:id="messageLabel" style="-fx-font-size: 14px;" />
</VBox>
