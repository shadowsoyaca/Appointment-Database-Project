<?xml version="1.0" encoding="UTF-8"?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.appointmentProject.desktop.controller.AdminDashboardController"
      alignment="TOP_CENTER"
      spacing="15"
      prefWidth="800"
      prefHeight="600"
      padding="20">

    <Label text="Admin Dashboard"
           style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <Button text="Load Insurance Records"
            onAction="#loadInsuranceData" />

    <TableView fx:id="insuranceTable" prefHeight="500">
        <columns>
            <TableColumn fx:id="colInsuranceId" text="Insurance ID" prefWidth="200"/>
            <TableColumn fx:id="colName" text="Name" prefWidth="200"/>
            <TableColumn fx:id="colPolicyNumber" text="Policy #" prefWidth="200"/>
            <TableColumn fx:id="colPhone" text="Phone" prefWidth="200"/>
        </columns>
    </TableView>

</VBox>
